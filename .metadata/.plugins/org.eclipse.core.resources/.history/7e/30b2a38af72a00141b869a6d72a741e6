<!DOCTYPE html>
<html>
    <head>
        <title>Annual Expenses</title>
    </head>
    <body>
        <form method="post">
            <label for="field">Enter number of years</label>
            <input type="text" name="input" id="field"/>
            <input type="submit" value="Show costs"/>
        </form>
        <?php
        if(isset($_POST['input']) && !empty($_POST['input'])):
            $years = $_POST['input'];
        ?>
        <table>
            <thead>
                <tr>
                    <th>Year</th>
                    <th>January</th>
                    <th>February</th>
                    <th>March</th>
                    <th>April</th>
                    <th>May</th>
                    <th>June</th>
                    <th>July</th>
                    <th>August</th>
                    <th>September</th>
                    <th>October</th>
                    <th>November</th>
                    <th>December</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <?php
                $currYear = date("Y");
                $annualExpense = 0;
                    for($i = 1; $i <= $years; $i++,$currYear--):
                        $currExpense = rand(0,999);
                        $annualExpense += $currExpense;
                ?>
                <tr>
                    <td><?= $currYear ?></td>
                    <td><?= $currExpense?></td>
                    <td><?= $currExpense?></td>
                </tr>
                <?php endfor; ?>
            </tbody>
        </table>
        <?php endif; ?>
    </body>
</html>