             <fieldset>
                 <legend>Computer Skills</legend>
                 <div id="programming">
                     <script>addLang();</script>
                 </div>
                 <input type="button" onclick="removeLang()" value="Remove Language"/>
                 <input type="button" onclick="addLang()" value="Add Language"/>
             </fieldset>
             
             
            <fieldset>
