<?php
if(isset($_GET['text-field'])){
    $array = preg_split("/, /", $_GET['text-field']);
    $counter = 0;
    $counts = array_count_values($array);
    arsort($counts);
    echo "The most frequent tag is: ".array_keys(reset($counts));
    foreach($array as $item){
        echo $counter++.":".$item."<br>";
    }
}

?>